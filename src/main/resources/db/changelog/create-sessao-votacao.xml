<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="002-create-sessao-votacao" author="saulo-capistrano">
        <createTable tableName="sessao_votacao">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="data_abertura" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="data_fechamento" type="TIMESTAMP"/>
            <column name="pauta_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sessao_pauta" referencedTableName="pauta" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
